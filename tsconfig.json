{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "paths": {
      "file-extension": [
        "./src/typings/file-extension/index.d.ts"
      ],
      "ttf2eot": [
        "./src/typings/ttf2eot/index.d.ts"
      ],
      "ttf2svg": [
        "./src/typings/ttf2svg/index.d.ts"
      ],
      "ttf2woff": [
        "./src/typings/ttf2woff/index.d.ts"
      ],
      "ttf2woff2": [
        "./src/typings/ttf2woff2/index.d.ts"
      ]
    }
  },
  "typedocOptions": {
    "name": "Font Converter",
    "mode": "modules",
    "out": "doc",
    "theme": "default",
    "ignoreCompilerErrors": "true",
    "experimentalDecorators": "true",
    "emitDecoratorMetadata": "true",
    "target": "ES2018",
    "moduleResolution": "node",
    "preserveConstEnums": "true",
    "stripInternal": "true",
    "suppressExcessPropertyErrors": "true",
    "suppressImplicitAnyIndexErrors": "true",
    "module": "commonjs"
  },
  "exclude": [
    "node_modules"
  ]
}
